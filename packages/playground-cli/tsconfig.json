{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "declaration": true,
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
